		android:layout_toRightOf="@id/bjdc_entry6"
		android:text="*" />

	<EditText android:id="@+id/bjdc_entry7" 
        android:layout_width="70dp"
		android:layout_height="wrap_content"
		android:background="@android:drawable/editbox_background"
