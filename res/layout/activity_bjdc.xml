	<!-- multi -->
	<TextView android:id="@+id/bjdc_label_multi" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@+id/bjdc_entry5"
		android:text="倍数(最多99)" />

	<EditText android:id="@+id/bjdc_entry_multi" 
        android:layout_width="70dp"
		android:layout_height="wrap_content"
		android:background="@android:drawable/editbox_background"
		android:inputType="number"
		android:text="1"
		android:layout_below="@+id/bjdc_entry5"
		android:layout_toRightOf="@id/bjdc_label_multi" />
	<Button
        android:id="@+id/buttonCalc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bjdc_entry_multi"
        android:text="计算" />

    <TextView
        android:id="@+id/textViewRes_bjdc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/buttonCalc1"
        android:text="" />
</RelativeLayout>